<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://xmlns.jcp.org/xml/ns/persistence
        http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="primary">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<jta-data-source>java:jboss/datasources/iselectDS</jta-data-source>
		<!-- entities -->
		<class>org.infosystema.iselect.model.Attachment</class>
		<class>org.infosystema.iselect.model.Dictionary</class>
		<class>org.infosystema.iselect.model.DictionaryType</class>
		<class>org.infosystema.iselect.model.LoginLog</class>
		<class>org.infosystema.iselect.model.RegistrationEntity</class>
		<class>org.infosystema.iselect.model.Role</class>
		<class>org.infosystema.iselect.model.Setting</class>
		<class>org.infosystema.iselect.model.User</class>
		<class>org.infosystema.iselect.model.UserLog</class>
		<class>org.infosystema.iselect.model.nomenclature.ViolationOfLaw</class>
		<class>org.infosystema.iselect.model.nomenclature.EntryPoint</class>
		<class>org.infosystema.iselect.model.nomenclature.Organization</class>
		<class>org.infosystema.iselect.model.nomenclature.Products</class>
		<class>org.infosystema.iselect.model.nomenclature.QuarantineObject</class>
		<class>org.infosystema.iselect.model.nomenclature.TransportType</class>
		<class>org.infosystema.iselect.model.app.AdditionalInfo</class>
		<class>org.infosystema.iselect.model.app.Applications</class>
		<class>org.infosystema.iselect.model.app.AppModule</class>
		<class>org.infosystema.iselect.model.app.Documents</class>
		<class>org.infosystema.iselect.model.app.DocumentsStep</class>
		<class>org.infosystema.iselect.model.app.Exporters</class>
		<class>org.infosystema.iselect.model.app.Goods</class>
		<class>org.infosystema.iselect.model.app.GoodStep</class>
		<class>org.infosystema.iselect.model.app.Importers</class>
		<class>org.infosystema.iselect.model.app.Transportations</class>
		<class>org.infosystema.iselect.model.app.NoStorage</class>
		<class>org.infosystema.iselect.model.app.Storage</class>
		<class>org.infosystema.iselect.model.app.Inspection</class>
		<class>org.infosystema.iselect.model.app.Expertises</class>
		<class>org.infosystema.iselect.model.app.Disinfection</class>
		<class>org.infosystema.iselect.model.app.ExpertisesGoods</class>
		<class>org.infosystema.iselect.model.app.ExpertisesResult</class>
		<class>org.infosystema.iselect.model.app.DisinfectionResult</class>
		<class>org.infosystema.iselect.model.Subdivision</class>
		<class>org.infosystema.iselect.model.app.MapZone</class>
		<class>org.infosystema.iselect.model.app.Certificate</class>
		<class>org.infosystema.iselect.model.nomenclature.OrganizationViolation</class>

		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		<shared-cache-mode>ENABLE_SELECTIVE</shared-cache-mode>
		<validation-mode>AUTO</validation-mode>

		<properties>
			<property name="hibernate.dialect"
				value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.connection.useUnicode"
				value="true" />
			<property name="hibernate.connection.characterEncoding"
				value="UTF-8" />
			<property name="hibernate.connection.charSet" value="UTF-8" />
			<property name="hibernate.connection.isolation" value="8" />
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.max_fetch_depth" value="3" />
			<property name="hibernate.connection.release_mode"
				value="after_statement" />
			<property name="hibernate.current_session_context_class"
				value="jta" />


			<property name="hibernate.search.default.directory_provider"
				value="filesystem" />
			<property name="hibernate.search.default.indexBase"
				value="/opt/iselect/index" />
			<property
				name="hibernate.search.default.indexwriter.infostream" value="true" />
			<property name="hibernate.search.error_handler" value="log" />

			<property name="hibernate.transaction.manager_lookup_class"
				value="org.hibernate.transaction.JBossTransactionManagerLookup" />
			<property name="hibernate.cache.use_second_level_cache"
				value="true" />
			<property name="hibernate.cache.use_query_cache"
				value="true" />
			<property name="hibernate.cache.use_minimal_puts"
				value="true" />
		</properties>
	</persistence-unit>
</persistence>
